{
  "name": "feral-code",
  "version": "1.0.0",
  "description": "FERAL CODE - An advanced AI coding assistant that supports multiple AI providers (OpenAI, OpenRouter, Ollama) with MCP support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "feral-code": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest run tests/e2e.test.ts",
    "test:cli": "vitest run tests/cli.test.ts",
    "test:build": "vitest run tests/build.test.ts",
    "lint": "tsc --noEmit",
    "lint:fix": "tsc --noEmit",
    "clean": "rimraf dist coverage .nyc_output",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "feral",
    "code",
    "ai",
    "coding",
    "cli",
    "assistant",
    "openai",
    "openrouter",
    "ollama",
    "mcp",
    "terminal",
    "development"
  ],
  "author": "Maksim Soltan <gonzih@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dotenv": "^16.0.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0",
    "node-fetch": "^3.0.0",
    "ws": "^8.0.0",
    "blessed": "^0.1.81",
    "react": "^17.0.0",
    "ink": "^3.2.0",
    "ink-text-input": "^4.0.0",
    "ink-spinner": "^4.0.0",
    "ink-box": "^2.0.0",
    "fast-glob": "^3.3.0",
    "minimatch": "^9.0.0",
    "chokidar": "^3.5.0",
    "fuse.js": "^7.0.0",
    "semver": "^7.5.0",
    "yaml": "^2.3.0",
    "js-yaml": "^4.1.0",
    "diff": "^5.1.0",
    "highlight.js": "^11.9.0",
    "strip-ansi": "^7.1.0",
    "wrap-ansi": "^8.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.0.0",
    "@types/react": "^17.0.0",
    "@types/blessed": "^0.1.21",
    "@types/diff": "^5.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/minimatch": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "c8": "^8.0.0",
    "rimraf": "^5.0.0"
  }
}
